<div class=question_index>
  <h2>Question List</h2>
  <table class="table table-bordered">
    <thread>
      <tr>
        <th>Title</th>
        <th>QuestionType</th>
        <% if current_user.admin? %>
          <th>Delete</th>
        <% else %>
          <th>Add Answer</th>
        <% end %>
      </tr>
    </thread>
    <tbody>
      <% if @questions.blank? %>
        <tr>
          <td colspan="4" align="center"> No Record Found </td>
        </tr>
      <% else %>
        <% @questions.each do |q| %>
          <tr>
            <td><%= q.title %></td>
            <td><%= q.question_type %></td>
            <% if current_user.admin? %>
              <td> <%= link_to 'Destroy', quiz_question_path(id: q.id), method: :DELETE %></td>
            <% else %>
              <% if q.answers&.last.present? %> 
                <td><%= q.answers.last.response %></td>
              <% else %>
                <td><%= link_to 'add', new_quiz_question_answer_path(quiz_id: q.quiz.id, question_id: q.id) %></td>
              <% end %>         
            <% end %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
      <%= link_to "Back", :back, class:"btn btn-primary" %>
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>
