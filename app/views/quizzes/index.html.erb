<div class=quiz_index>
  <h2>Quiz List</h2>
  <table class="table table-bordered">
    <thread>
      <tr>
        <th>QuizName</th>
        <th>View Question</th>
        <% if current_user.admin? %>
          <th>Add Question</th>
          <th>Action</th>
        <% end %>
      </tr>
    </thread>
    <tbody>
      <% if @quizzes.blank? %>
      <tr>
        <td colspan="4" align="center"> No Record Found </td>
      </tr>
      <% else %>
        <% @quizzes.each do |q| %>
          <tr>
            <td><%= q.name %></td>
            <td><%= link_to 'view', quiz_questions_path(quiz_id: q.id) %></td>
            <% if current_user.admin? %>
              <td><%= link_to 'add', new_quiz_question_path(quiz_id: q.id) %></td>
              <td> <%= link_to 'destroy', quiz_path(id: q.id), method: :DELETE %></td>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-3">
      <%= link_to "Back", :back, class:"btn btn-primary" %>
    </div>
    <div class="col-md-3">
      <li><%= link_to 'Add Quiz', new_quiz_path, :class => 'btn btn-primary' if current_user.admin? %></li>
    </div>
    <div class="col-md-3">
    </div>
  </div>
</div>

